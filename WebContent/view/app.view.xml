<mvc:View 
    controllerName="sap.ui.demopad.controller.app"
  	xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">
   	<App class="appStyle" id="padApp">
		<Page showHeader="false" enableScrolling="false" >
			<TileContainer id="tileContainer" tiles="{tile>/tileSet}">
				<StandardTile
					icon="sap-icon://{tile>TileIcon}"
					number="{tile>TileNumber}"
					numberUnit="{tile>TileNumberUnit}"
					title="{tile>TileTitle}"
					info="{tile>TileInfo}"
					infoState="{tile>TileInfoState}" 
					press="onTilePress" />
			</TileContainer>
		</Page>   	    
	</App>	
</mvc:View>